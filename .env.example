# Nerion V2 API credentials
NERION_V2_OPENAI_KEY=
NERION_V2_GEMINI_KEY=

# Optional overrides
# NERION_V2_DEFAULT_PROVIDER=openai:gpt-5
# NERION_V2_REQUEST_TIMEOUT=15

# Post-apply verification commands
# Override these to match your smoke/integration/UI/regression pipelines.
NERION_VERIFY_SMOKE_CMD="python -m pytest tests/smoke -q"
NERION_VERIFY_INTEGRATION_CMD="python -m pytest tests/cli -q"
NERION_VERIFY_UI_CMD="skip"  # replace with npm run build --prefix app/ui/holo-app when Node deps are available
NERION_VERIFY_REG_CMD="skip"

# Governor controls (commented defaults)
# NERION_GOVERNOR_MIN_INTERVAL_MINUTES=30
# NERION_GOVERNOR_MAX_RUNS_PER_HOUR=2
# NERION_GOVERNOR_MAX_RUNS_PER_DAY=6
# NERION_GOVERNOR_WINDOWS=08:00-22:00
# NERION_GOVERNOR_OVERRIDE=0
